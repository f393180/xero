<!doctype html>
<html lang="en">

<head>
	<%- include('common/head'); %>
</head>

<body>
	<div class="container-fluid">
		<h4>Login</h4>
		<form class="mt-5" method="POST" action="/auth/login">
			<div class="form-row">
				<div class="form-group col-sm-2">
					<label for="username">Username</label>
					<input type="text" class="form-control form-control-sm" id="username" name="username" maxlength="15" />
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-sm-2">
					<label for="password">Password</label>
					<input type="text" class="form-control form-control-sm" id="password" name="password" />
				</div>
			</div>
			<button class="btn btn-primary btm-sm" type="submit">Submit</button>

		</form>

		</form>
	</div>
	<%- include('common/scripts'); %>
</body>

</html>